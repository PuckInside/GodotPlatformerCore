resource_name = "Player"
script/source = "class_name Player
extends PlatformerBody2D

var can_dash: bool = false

func _ready() -> void:
	$JumpInputBuffer.connect(\"do_jump\", _try_jump)

func _physics_process(_delta: float) -> void:
	move_and_slide()
	
	if is_on_floor():
		$CoyoteTime.start()
		can_dash = true
	
	var move_axis: float = Input.get_axis(\"left\", \"right\")
	var input_facing: float = 0.0
	
	if Input.is_action_just_pressed(\"left\"):
		input_facing -= 1.0
	if Input.is_action_just_pressed(\"right\"):
		input_facing += 1.0
	
	$MovementFSM.move(move_axis, input_facing)
	
	if Input.is_action_pressed(\"jump\"):
		$JumpInputBuffer.start()
	
	if Input.is_action_just_released(\"jump\"):
		$MovementFSM.jump_cut()
	
	if Input.is_action_just_pressed(\"dash\") and can_dash:
		$MovementFSM.dash()
		can_dash = false
	
	if Input.is_action_just_pressed(\"down\"):
		set_collision_mask_value(5, false)
		await get_tree().create_timer(0.1).timeout
		set_collision_mask_value(5, true)

func _try_jump() -> void:
	if $CoyoteTime.is_stopped():
		return
	
	$MovementFSM.jump()
	$CoyoteTime.stop()
	$JumpInputBuffer.stop()
"

